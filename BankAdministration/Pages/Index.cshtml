@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Statistics Section -->
<section class="card py-5">
    <div class="container-fluid">
        <div class="row d-flex align-items-center justify-content-around p-3 mb-3">
            <!-- Count item widget-->
            <div class="col-xl-2 col-md-4 col-6 gy-4 gy-xl-0">
                <div class="d-flex">
                   <i class="far fa-2x fa-user"></i>
                    <div class="ms-2">
                        <h3 class="h4 text-dark fw-normal">Aktiva kunder</h3>
                        <p class="display-6 mb-0">@Model.ActiveCustomers</p>
                    </div>
                </div>
            </div>
            <!-- Count item widget-->
            <div class="col-xl-2 col-md-4 col-6 gy-4 gy-xl-0">
                <div class="d-flex">
                    <i class="fas fa-2x fa-money-check"></i>
                    <div class="ms-2">
                        <h3 class="h4 text-dark fw-normal">Aktiva konton</h3>
                        <p class="display-6 mb-0">@Model.AvailableAccounts</p>
                    </div>
                </div>
            </div>
            <!-- Count item widget-->
            <div class="col-xl-2 col-md-4 col-6 gy-4 gy-xl-0">
                <div class="d-flex">
                    <i class="fas fa-2x fa-dollar-sign"></i>
                    <div class="ms-2">
                        <h3 class="h4 text-dark fw-normal">Summan</h3>
                        <p class="display-6 mb-0">@Model.SumOfBalances</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<!-- Search Section -->
<section class="card py-5">
    <div class="container-fluid">
        <div class="row">

            <h3>Sidan @Model.CurrentPage av @Model.PageCount</h3>
            <form method="get">
                <input asp-for="@Model.SearchWord" />
                <input type="hidden" asp-for="@Model.CustomerId" />
                <input type="submit" value="Sök" />
            </form>



            
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            KontoNr.
                            <a asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="AccountId"
                               asp-route-sortOrder="asc">
                                <i class="fa-solid fa-angle-up"></i>
                            </a>
                            <a asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="AccountId"
                               asp-route-sortOrder="desc">
                                <i class="fa-solid fa-angle-down"></i>
                            </a>
                        </th>
                        <th>
                            Namn
                            <a asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="Givenname"
                               asp-route-sortOrder="asc">
                                <i class="fa-solid fa-angle-up"></i>
                            </a>
                            <a asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="Givenname"
                               asp-route-sortOrder="desc">
                                <i class="fa-solid fa-angle-down"></i>
                            </a>
                        </th>
                        <th>
                            Adress
                            <a asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="Streetaddress"
                               asp-route-sortOrder="asc">
                                <i class="fa-solid fa-angle-up"></i>
                            </a>
                            <a asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="Streetaddress"
                               asp-route-sortOrder="desc">
                                <i class="fa-solid fa-angle-down"></i>
                            </a>
                        </th>
                        <th>
                            Stad
                            <a asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="City"
                               asp-route-sortOrder="asc">
                                <i class="fa-solid fa-angle-up"></i>
                            </a>
                            <a asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="City"
                               asp-route-sortOrder="desc">
                                <i class="fa-solid fa-angle-down"></i>
                            </a>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.AccountId</td>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.Address</td>
                            <td>@item.City</td>
                            <td><a asp-page="/Person/Customer" asp-route-uniqueId="@item.Id" class="btn btn-primary">View</a></td>
                            <td><a asp-page="/Account/Account" asp-route-uniqueId="@item.Id" class="btn btn-primary">Konton</a></td>
                        </tr>
                    }
                    <tr>
                        <td>
                            @if (@Model.CurrentPage != 1)
                            {
                                <a class="btn btn-secondary"
                               asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="@Model.SortColumn"
                               asp-route-sortOrder="@Model.SortOrder"
                               asp-route-pageno="@(Model.CurrentPage - 1)">
                                    Prev
                                </a>
                            }

                        </td>
                        <td colspan="2">
                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                string theClass = "btn-secondary";
                                if (i == @Model.CurrentPage)
                                {
                                    theClass = "btn-primary";
                                }

                                <a class="btn @theClass"
                               asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="@Model.SortColumn"
                               asp-route-sortOrder="@Model.SortOrder"
                               asp-route-pageno="@i">
                                    @i
                                </a>
                            }
                        </td>
                        <td>
                            @if (@Model.CurrentPage < @Model.PageCount)
                            {
                                <a class="btn btn-secondary"
                               asp-page="/Index"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortColumn="@Model.SortColumn"
                               asp-route-sortOrder="@Model.SortOrder"
                               asp-route-pageno="@(Model.CurrentPage + 1)">
                                    Next
                                </a>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
           @* </div>*@
        </div>
    </div>
</section>