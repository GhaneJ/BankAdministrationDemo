@page
@model BankAdministration.Pages.BankAccount.DepositModel
@{
}

<section class="card py-5">
    <div class="container-fluid">
        <div class="row">
            <form method="post">

                <div class="form-group">
                    <label asp-for="Amount">Belopp</label>
                    <input class="form-control" asp-for="Amount" />
                    <span class="text-danger field-validation-error" asp-validation-for="Amount"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DepositDate">Datum för dragning</label>
                    <input class="form-control" asp-for="DepositDate" />
                    <span class="text-danger field-validation-error" asp-validation-for="DepositDate"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AccType">Typ</label>
                    <select asp-for="AccType" asp-items="@Model.AccountTypes">
                    </select><br />
                    <span asp-validation-for="AccType" class="field-validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment">Kommentar</label>
                    <input class="form-control" asp-for="Comment" />
                    <span class="text-danger field-validation-error" asp-validation-for="Comment"></span>
                </div>
                <button type="submit" class="btn btn-primary">Sätta in</button>
            </form>
        </div>
    </div>
</section>