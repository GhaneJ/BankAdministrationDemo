@page
@model BankAdministration.Pages.BankAccount.TransferModel
@{
}

<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Registrera en ny kund</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="ToAccount">Överför till kontot</label>
                        <input class="form-control" asp-for="ToAccount">
                        <span asp-validation-for="ToAccount" class="text-danger field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount">Belopp</label>
                        <input asp-for="Amount" class="form-control" type="number" value="@Model.Amount.ToString()" />
                        @*<input class="form-control" asp-for="Amount">*@
                        <span asp-validation-for="Amount" class="text-danger field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Operation">Operation</label>
                        <input class="form-control" asp-for="Operation">
                        <span asp-validation-for="Operation" class="text-danger field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Symbol">Kommentar</label>
                        <input class="form-control" asp-for="Symbol">
                        <span asp-validation-for="Symbol" class="text-danger field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bank">Bank</label>
                        <input class="form-control" asp-for="Bank">
                        <span asp-validation-for="Bank" class="text-danger field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccType">Typ</label>
                        <select asp-for="AccType" asp-items="@Model.AccountTypes">
                        </select><br />
                        <span asp-validation-for="AccType" class="field-validation-error"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Överför</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
<partial name="Shared/_ValidationScriptsPartial" />

}
