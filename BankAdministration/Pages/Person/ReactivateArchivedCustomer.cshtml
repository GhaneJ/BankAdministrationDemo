@page
@model BankAdministration.Pages.Person.ReactivateArchivedCustomerModel
@{
}

<!-- Search Section -->
<section class="card py-5">
    <div class="container-fluid">
        <div class="row">

            <h3>Sidan @Model.CurrentPage av @Model.PageCount</h3>
            <form method="get">
                <input asp-for="@Model.SearchWord" />
                <input type="hidden" asp-for="@Model.CustomerId" />
                <input type="submit" value="Sök" />
            </form>




            @*<div class="table-responsive pb-3">*@
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Namn
                            <a asp-page="/Person/Customers"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="Givenname"
                               asp-route-sortOrder="asc">
                                <i class="fa-solid fa-angle-up"></i>
                            </a>
                            <a asp-page="/Person/Customers"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="Givenname"
                               asp-route-sortOrder="desc">
                                <i class="fa-solid fa-angle-down"></i>
                            </a>
                        </th>
                        <th>
                            Adress
                            <a asp-page="/Person/Customers"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="streetaddress"
                               asp-route-sortOrder="asc">
                                <i class="fa-solid fa-angle-up"></i>
                            </a>
                            <a asp-page="/Person/Customers"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="streetaddress"
                               asp-route-sortOrder="desc">
                                <i class="fa-solid fa-angle-down"></i>
                            </a>
                        </th>
                        <th>
                            Stad
                            <a asp-page="/Person/Customers"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="City"
                               asp-route-sortOrder="asc">
                                <i class="fa-solid fa-angle-up"></i>
                            </a>
                            <a asp-page="/Person/Customers"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="City"
                               asp-route-sortOrder="desc">
                                <i class="fa-solid fa-angle-down"></i>
                            </a>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.Address</td>
                            <td>@item.City</td>
                            <td>
                                <a asp-page="/Person/EditCustomer" asp-route-id="@item.Id">
                                <i class="bx bx-edit bx-md"></i></a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td>
                            @if (@Model.CurrentPage != 1)
                            {
                                <a class="btn btn-secondary"
                               asp-page="/Person/Customers"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="@Model.SortColumn"
                               asp-route-sortOrder="@Model.SortOrder"
                               asp-route-pageno="@(Model.CurrentPage - 1)">
                                    Prev
                                </a>
                            }

                        </td>
                        <td colspan="2">
                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                string theClass = "btn-secondary";
                                if (i == @Model.CurrentPage)
                                {
                                    theClass = "btn-primary";
                                }

                                <a class="btn @theClass"
                               asp-page="/Person/Customers"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-searchWord="@Model.SearchWord"
                               asp-route-sortColumn="@Model.SortColumn"
                               asp-route-sortOrder="@Model.SortOrder"
                               asp-route-pageno="@i">
                                    @i
                                </a>
                            }
                        </td>
                        <td>
                            @if (@Model.CurrentPage < @Model.PageCount)
                            {
                                <a class="btn btn-secondary"
                               asp-page="/Person/Customers"
                               asp-route-customerId="@Model.CustomerId"
                               asp-route-sortColumn="@Model.SortColumn"
                               asp-route-sortOrder="@Model.SortOrder"
                               asp-route-pageno="@(Model.CurrentPage + 1)">
                                    Next
                                </a>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
           @* </div>*@
        </div>
    </div>
</section>