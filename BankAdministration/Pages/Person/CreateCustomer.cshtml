@page
@model BankAdministration.Pages.CreateCustomerModel
@{
}

<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Registrera en ny kund</h3>
            </div>

            <div class="card-body">

                <form method="post">
                    <div>
                        <label asp-for="Givenname">Förnamn</label>
                        <input class="form-control" asp-for="Givenname">
                        <span asp-validation-for="Givenname" class="text-danger field-validation-error"></span>
                    </div>
                    <div>
                        <label asp-for="Surname">Efternamn</label>
                        <input class="form-control" asp-for="Surname">
                        <span asp-validation-for="Surname" class="text-danger field-validation-error"></span>
                    </div>
                    <div>
                        <label asp-for="Gender">Kön</label>
                        <input class="form-control" asp-for="Gender">
                        <span asp-validation-for="Gender" class="text-danger field-validation-error"></span>
                    </div>
                    <div>
                        <label asp-for="NationalId">Personnummer</label>
                        <input class="form-control" asp-for="NationalId">
                        <span asp-validation-for="NationalId" class="text-danger field-validation-error"></span>
                    </div>
                    <div>
                        <label asp-for="Streetaddress">Gatuadress</label>
                        <input class="form-control" asp-for="Streetaddress">
                        <span asp-validation-for="Streetaddress" class="text-danger field-validation-error"></span>
                    </div>
                    <div>
                        <label asp-for="Zipcode">Postnummer</label>
                        <input class="form-control" asp-for="Zipcode">
                        <span asp-validation-for="Zipcode" class="text-danger field-validation-error"></span>
                    </div>

                    <div>
                        <label asp-for="City">Postort</label>
                        <input class="form-control" asp-for="City">
                        <span asp-validation-for="City" class="text-danger field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <hr/>
                        <label asp-for="CountryId">Landskod</label>
                        <select asp-for="CountryId" asp-items="@Model.Countries">
                        </select>
                        <span asp-validation-for="CountryId" class="text-danger field-validation-error"></span>
                        </div>
                    <div>
                        <label asp-for="Birthday">Födelsedatum</label>
                        <input class="form-control" asp-for="Birthday">
                        <span asp-validation-for="Birthday" class="text-danger field-validation-error"></span>
                    </div>
                    <div>
                        <label asp-for="Telephonenumber">Telefonnummer</label>
                        <input class="form-control" asp-for="Telephonenumber">
                        <span asp-validation-for="Telephonenumber" class="text-danger field-validation-error"></span>
                    </div>
                    <div>
                        <label asp-for="Telephonecountrycode">riktnummer</label>
                        <input class="form-control" asp-for="Telephonecountrycode">
                        <span asp-validation-for="Telephonecountrycode" class="text-danger field-validation-error"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Emailaddress">E-post</label>
                        <input class="form-control" asp-for="Emailaddress">
                        <span asp-validation-for="Emailaddress" class="text-danger field-validation-error"></span>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Registrera</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>